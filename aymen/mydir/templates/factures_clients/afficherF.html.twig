{% extends 'base1.html.twig' %}


{% block html %}
<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
</head>
<body>
{% block body %}

<h2>Liste des Factures </h2>
<form method="post" action="{{ path('rechercheF') }}">
    <label>Search</label>
    <input type="text" name="search"><input class="btn btn-success" type="submit" value="Recherche">
</form>
<table border="" class="table table-striped custom-table">
    <tr>
        <th>ID</th>
        <th>nom de banque</th>
        <th>nom Client</th>
        <th>date</th>
        <th>Reglement</th>
        <th>etat</th>
        <th>tva</th>
        <th>remise</th>
        <th>NB</th>
        <th>Totale</th>
        <th>Update</th>
        <th>Delete</th>


    </tr>
    <tr {%  for c in facture %}>
        <td>{{c.idFac}}</td>
        <td>{{c.banque.nomBanque}}</td>
        <td>{{ c.nomClient }}</td>
        <td>{{ c.dateFac |date('d-m-Y')}}</td>
        <td>{{ c.reglementFac }}</td>
        <td>{{ c.etatFac }}</td>
        <td>{{ c.tvaFac }}</td>
        <td>{{ c.remiseFac }}</td>
        <td>{{ c.nbFac }}</td>
        <td>{{ c.totaleFac }}</td>
        <td><a href=" {{ path('updateF',{'id':c.idFac}) }}" class="nav-link">Update</a></td>
        <td><a href=" {{ path('dF',{'id':c.idFac}) }}" class="nav-link">Delete</a></td>
    </tr{% endfor %} >
</table>
    <form method="post" action="{{ path('triF') }}">
        <input class="btn btn-success" type="submit" value="Tri">
    </form>
    <form method="post" action="{{ path('ajoutF') }}">
        <input class="btn btn-success" type="submit" value="Ajouter">
    </form>
{% endblock %}
</body>
</html>
{% endblock %}