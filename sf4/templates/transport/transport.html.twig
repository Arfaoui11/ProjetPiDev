{% extends 'base1.html.twig' %}
{% block html %}
<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title> Document
        <style>
            table.table td a.edit {
                color: #FFC107;
            }
            table.table td a.delete {
                color: #F44336;
            }
        </style>
    </title>
</head>

<body>
{% block body %}
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
<h2>Liste des transports</h2>
<form method="post" action="{{ path('recherche') }}">
    <label>Search</label>
    <input type="text" name="search"><input type="submit" value="Recherche">
</form>
<table border=""     class="table table-striped custom-table"
>


    <tr>
        <th>matricule</th>
        <th>type</th>
        <th>dispo</th>
        <th>driver</th>
        <th>prix</th>



    </tr>
    <tr {%  for t in transport %}>
        <td>{{t.id}}</td>
        <td>{{ t.type }}</td>
        <td>{{ t.dispo }}</td>
        <td>{{ t.driver }}</td>
        <td>{{ t.prix }}</td>
        <td>
            <a href=" {{ path('update',{'id':t.id}) }}" class="edit" ><i class="material-icons" data-toggle="tooltip" title="Edit">&#xE254;</i></a>
            <a href=" {{ path('d',{'id':t.id}) }}" class="delete" ><i class="material-icons" data-toggle="tooltip" title="Delete">&#xE872;</i></a>
        </td>

    </tr{% endfor %} >
</table>
<form method="post" action="{{ path('tri') }}">
    <input class="btn btn-success" type="submit" value="Tri">
</form>
    <form method="post" action="{{ path('ajouttransport') }}">
        <input class="btn btn-success" type="submit" value="Ajouter">
    </form>

{% endblock %}
</body>
</html>
{% endblock %}